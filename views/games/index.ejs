<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head.ejs')%>
</head>

<body>
    <header>
        <%- include('../partials/header.ejs')%>

        <!-- <h1>Backlog</h1>
        
        <h2>Sign In</h2> -->
    </header>
    <main>
        
    <div class="welcome">
        <h3>Welcome Back! Here's your collection.</h3>
    <a href="/games/new"><button>Add Game</button></a>
    </div>
    
    <h5>All Games</h5>
    <ul>
    <% for (let i = 0; i < games.length; i++) { %>
        <div class="gamecard">

<li>
    <a href="/games/<%=games[i]._id%>"><%= games[i].title %></a><br>
    <div class="art">
        <a href="/games/<%=games[i]._id%>" class="boxart"><img src="<%=games[i].coverURL%>" id="cover" alt=""></a>
    </div>
    <br>
    <div class="delete-edit">
        <form action="/games/<%=games[i]._id%>?_method=DELETE" method="POST">
            <input type="submit" value="DELETE">
        </form> 
        <a href="/games/<%=games[i].id%>/edit"><input type="submit" value="EDIT"></a>

    </div>
   
   
</li>
</div>
    <% } %> 
    </ul>

</main>
