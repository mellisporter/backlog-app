<body>
<div class="collection">
    <h2>Your Games</h2>
    <h2><a href="/games/new">Add Game</a></h2>
    <ul>
    <% for (let i = 0; i < games.length; i++) { %>
<li>
    <a href="/games/<%=games[i]._id%>"><%= games[i].title %></a><br>
    <img src="<%=games[i].coverURL%>" alt=""><br>
    <form action="/games/<%=games[i]._id%>?_method=DELETE" method="POST">
        <input type="submit" value="DELETE">
    </form>
    <form action="">
        <a href="/games/<%=games[i].id%>/edit">Edit Game</a>
    </form>
   
</li>
    <% } %> 
    </ul>
</div>
</body>
</html>